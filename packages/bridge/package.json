{
  "name": "@webviewkit/bridge",
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0",
  "description": "A bridge library for WebView and Native communication",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "webview",
    "bridge",
    "communication"
  ],
  "author": "minai621",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/minai621/webviewkit.git"
  },
  "bugs": {
    "url": "https://github.com/minai621/webviewkit/issues"
  },
  "homepage": "https://github.com/minai621/webviewkit#readme",
  "scripts": {
    "build": "tsup",
    "test": "jest --config ./jest.config.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/jest": "^29.5.12",
    "@types/uuid": "^10.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "typescript": "^4.0.0 || ^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.6",
  "dependencies": {
    "@webviewkit/environment": "workspace:*",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
